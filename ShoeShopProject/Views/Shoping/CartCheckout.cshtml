<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Pricing - SB Admin Pro</title>
    <link href="/css/styles.css" rel="stylesheet" />
    <link rel="icon" type="image/x-icon" href="/assets/img/favicon.png" />
    <script data-search-pseudo-elements defer src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/js/all.min.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/feather-icons/4.28.0/feather.min.js" crossorigin="anonymous"></script>
</head>
<body class="nav-fixed sidenav-toggled">
    @Html.Partial("_Header")
    <div id="layoutSidenav">
        <div id="layoutSidenav_content">
            <main>
                <!-- Main page content-->
                <div class="container-xl px-4">
                    <div class="text-center my-5">
                        <h1 class="text-dark mb-2 display-6 fw-bold">THÔNG TIN THANH TOÁN</h1>
                    </div>
                    <!-- Detailed pricing example-->
                    <div class="pricing-detailed">
                        <div class="row align-items-center g-0">
                            <!-- Detailed pricing column 1-->
                            <div class="card col-lg-6 z-1 mb-4 mb-lg-0">
                                <div class="border-0">
                                    <div class="card-header bg-transparent justify-content-center py-4"><h5 class="text-primary mb-0">Thông tin giao hàng</h5></div>
                                    <div class="card-body p-5">
                                        <p class="text-dark fw-bold">Họ và tên *</p>
                                        <div class="mb-4">
                                            <input type="text" class="form-control" placeholder="Nhập họ và tên" value="" />
                                        </div>
                                        <p class="text-dark fw-bold">Số điện thoại *</p>
                                        <div class="mb-4">
                                            <input type="text" class="form-control" placeholder="Nhập số điện thoại" value="" />
                                        </div>
                                        <p class="text-dark fw-bold">Địa chỉ email *</p>
                                        <div class="mb-4">
                                            <input type="text" class="form-control" placeholder="Nhập đại chỉ email" value="" />
                                        </div>
                                        <p class="text-dark fw-bold">Đại chỉ giao hàng *</p>
                                        <div class="mb-4">
                                            <input type="text" class="form-control" placeholder="Nhập địa chỉ giao hàng cụ thể" value="" />
                                        </div>
                                        <p class="text-dark fw-bold">Ghi chú đơn hàng (tuỳ chọn)</p>
                                        <div class="mb-4">
                                            <textarea class="form-control" style="height: 100px;" placeholder="Ghi chú về đơn hàng, ví dụ: thời gian hay chỉ dẫn địa điểm giao hàng chi tiết hơn."></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Detailed pricing column 2-->
                            <div class="card col-lg-6">
                                <div class="">
                                    <div class="card-header justify-content-center py-4"><h5 class="mb-0">Thông tin đơn hàng</h5></div>
                                    <div class="card-body text-white-50 p-5">
                                        <!-- Thông tin sản phẩm-->
                                        <div class="table-responsive">
                                            <table class="table table-borderless mb-0">
                                                <thead class="border-bottom">
                                                    <tr class="small text-uppercase text-muted">
                                                        <th class="col-5" scope="col">SẢN PHẨM</th>
                                                        <th class="col-2 text-center" scope="col">SỐ LƯỢNG</th>
                                                        <th class="col-2 text-end" scope="col">TẠM TÍNH</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @for (int i = 0; i < 4; i++)
                                                    {
                                                        <tr class="border-bottom">
                                                            <td class="col-5 align-middle">
                                                                <a class="fw-bold text-gray-700 text-decoration-none" href="#">Nike Air Force 1 Low – Playful Pink</a>
                                                            </td>
                                                            <td class="col-2 text-center align-middle fw-bold">1</td>
                                                            <td class="col-2 text-end align-middle fw-bold">3.000.000đ</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                        <!-- Thanh toán-->
                                        <div class="table-responsive">
                                            <table class="table table-borderless mb-0">
                                                <thead class="border-bottom">
                                                    <tr class="small text-uppercase">
                                                        <th class="col-10" scope="col">TỔNG</th>
                                                        <th class="col-2"></th>
                                                        <th class="col-2 text-end text-teal" style="font-size: 1rem;" scope="col">13.000.000đ</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr class="text-uppercase">
                                                        <td class="col-5 align-middle fw-bold">THANH TOÁN</td>
                                                    </tr>
                                                    <tr class="border-bottom">
                                                        <td class="col-5 align-middle">
                                                           <input type="radio" name="paymentMethod" value="" />
                                                           <span class="fw-bold">COD</span>
                                                        </td>
                                                    </tr>
                                                    <tr class="border-bottom">
                                                        <td class="col-5 align-middle">
                                                            <input type="radio" name="paymentMethod" value="" />
                                                            <span class="fw-bold">Chuyển khoản ngân hàng</span>
                                                        </td>
                                                    </tr>
                                                    <tr class="border-bottom">
                                                        <td class="col-5 align-middle">
                                                            <input type="radio" name="paymentMethod" value="" />
                                                            <span class="fw-bold">Chuyển khoản MoMo</span>
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                        <div class="row p-5">
                                            <button class="btn btn-outline-teal" style="font-size: 1.5rem">THANH TOÁN</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <hr class="my-10" />
            </main>
            @Html.Partial("_Footer")
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="/js/scripts.js"></script>
    <script src="/js/jquery-3.6.0.min.js"></script>
</body>
</html>
